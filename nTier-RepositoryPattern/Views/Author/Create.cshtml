@model nTier_RepositoryPattern.Entity.Author
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Author Create</h1>
    <form method="post">
        <input type="text" asp-for="Name" placeholder="Name" required="" />
        <input type="text" asp-for="Surname" placeholder="Surname" required="" />

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>